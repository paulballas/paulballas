include mixins

block settings  
  - var slug = '';

doctype html
html(lang='en' class= slug)
  head
    meta(charset='UTF-8')
    meta( content="width=device-width, user-scalable=no", name="viewport" )
      
    meta(name='robots' content='noindex, nofollow')
    meta(name="googlebot" content='noindex, nofollow')  
    meta(name='description' content="Paul Ballas - Designer & Developer")  
    
    title= title
    meta( property="og:title", content="Paul Ballas" )
    meta( property="og:type", content="website" )
    meta( property="og:url", content="https://www.paulbalals.com" )
    meta( property="og:description", content="Paul Ballas - Designer & Developer" )
    meta( property="og:image", content="https://wwww.paulbalals.com/assets/pb.png" )
    meta( property="og:image:width", content="120" )
    meta( property="og:image:height", content="120" )
      
    meta( property="twitter:card", content="summary_large_image" )
    meta( property="twitter:url", content="https://www.paulballas.com" )
    meta( property="twitter:title", content="Designer + Cycler" )
    meta( property="twitter:description", content="" )
    meta( property="twitter:image", content="https://wwww.paulballas.com/assets/pb.png" )
      
    link(rel='apple-touch-icon', sizes='180x180' href='/apple-touch-icon.png')
    link(rel='icon', type='image/png', href='/favicon-32x32.png', sizes='32x32')
    link(rel='icon', type='image/png', href='/favicon-16x16.png', sizes='16x16')
    link(rel='manifest', href='/manifest.json')
    link(rel='mask-icon', href='/safari-pinned-tab.svg', color='#414b8b')
    meta(name='theme-color', content='#ffffff')
    
    link(rel='stylesheet', href='/css/app.css')
    script(async='', src='https://www.googletagmanager.com/gtag/js?id=UA-113305039-1')
    script.
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'UA-113305039-1');
  body
    block header
      header.primary-pop-bg
        .container
          .row.middle-xs.relative
            a.logo(href='/')
              +img('paul-ballas', 'jpg')  
            .col-md-6.col-xs-12.left-text-md.center-text-xs
              a(class='block m-b-2-xs' href='/')
                +logo
            .col-md-6.col-xs-12.right-text-md.center-text-xs
              nav
                ul
                  li.small
                    a(class='no-under portfolio light-text m-b-0' href='/portfolio' title='Paul Portfolio') Portfolio
                  li.small
                    a(class='no-under portfolio light-text m-b-0' href='/logos' title='Paul Portfolio') Logos
                  li.small
                    a(class='no-under email' title='Contact Paul by email')
                      +email            
                  li.small
                    a(class='no-under linkedin' href='https://www.linkedin.com/in/paulballas/' target='_blank' title='Contact Paul on LinkedIn')
                      +linkedin                  
                  li.small
                    a(class='no-under github' href='https://github.com/paulballas' target='_blank' title='Contact Paul on GitHub')
                      +github
                        +github                      
    block email
      .modal
        .container.modal-container                    
          .row
            .col-md-8.col-md-offset-2.col-xs-12
              .modal-content
                .modal-header.flex.middle.between
                  p.m-b-0
                    b Email Paul
                  a.m-b-0.close-modal.observable Close
                .modal-body
                  .on-success
                    h3.type-black Success!
                  form(id='email_paul' method='POST' action='https://formspree.io/paul.ballas@gmail.com')
                    .form-item
                      label Name
                      input(type='text' placeholder='Awesome McAwesome' name='name')
                    .form-item
                      label Your Email
                      input(type='email' placeholder='awesome@email.com' name='email')
                    .form-item
                      label Message
                      textarea(type='text' placeholder='Hello...' rows='5' name='message')
                    .form-item
                      input.m-b-0.form-submit(type='submit' value='Submit')
    block content
    block footer
      .dark-gray-bg.footer
        .container
          .pad-container
            .row.m-b-2
              .col-xs-12.center-text-xs
                h6 paul ballas
            .row
              .col-md-8.col-md-offset-2.col-xs
                .row
                  .col-md.col-xs-12
                    a(class='no-under m-b-1-xs' href='/portfolio' title='Paul Portfolio') Portfolio
                  .col-md.col-xs-12
                    a(class='no-under m-b-1-xs' href='/logos' title='Paul Portfolio') Logos
                  .col-md.col-xs-12
                    a(class='no-under m-b-1-xs email' title='Contact Paul by email') Email
                  .col-md.col-xs-12
                    a(class='no-under m-b-1-xs' href='https://www.linkedin.com/in/paulballas/' target='_blank' title='Contact Paul on LinkedIn') LinkedIn                   
                  .col-md.col-xs-12
                    a(class='no-under m-b-1-xs' href='https://github.com/paulballas' target='_blank' title='Contact Paul on GitHub') GitHub
    block scripts
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
      script(src='https://cdnjs.cloudflare.com/ajax/libs/zooming/1.4.1/zooming.min.js')
      script(src='/js/app.js')      
